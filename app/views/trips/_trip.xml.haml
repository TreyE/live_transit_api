%trip_id= trip.trip_id
%trip_headsign= trip.trip_headsign
%trip_short_name= trip.trip_short_name
%shape_id= trip.shape_id
%service_id= trip.service_id
%direction_id= trip.direction_id
%start_time= trip.start_time
%end_time= trip.end_time
%first_stop_name= trip.first_stop_name
%last_stop_name= trip.last_stop_name
%schedules{ :type => "array" }
  - trip.schedules.each do |sch|
    %schedule
      %start_date= sch["start_date"]
      %end_date= sch["end_date"]
      %day_type{:type => "integer"}= sch["day_type"]
%stop_times{ :type => "array" }
  - trip.stops.each do |stop_time_item|
    %stop_time
      %arrival_time= stop_time_item["arrival_time"]
      %departure_time= stop_time_item["departure_time"]
      %sequence{:type => "integer"}= stop_time_item["stop_sequence"]
      %stop_name= stop_time_item["stop_name"]
      %stop_id= stop_time_item["stop_id"]
      %stop_code= stop_time_item["stop_code"]
      %stop{ :link => url_for(:controller => :stops, :action => "show", :id => stop_time_item["stop_code"])}

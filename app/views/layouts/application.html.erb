<!DOCTYPE html>
<html lang="en">
<head>
	<title>Live Transit API</title>
	<meta charset="utf-8">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">

	<!--[if lt IE 9]>
		<script src="//html5shim.googlecode.com/svn/trunk/html5.js" type="text/javascript></script>"
	<![endif] -->
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
  <%= yield :page_css %>
</head>
<body style="padding-top: 60px;">
	<!-- Container ================================================== -->
	<div class="container-fluid">

		<!-- Navigation ================================================== -->	
		<div class="navbar navbar-fixed-top">
		  <div class="navbar-inner">
		    <div class="container-fluid">
					<div id="user_nav" class="navbar-text pull-right">
						<% if user_signed_in? %>
							<ul class="nav">
								<li class="dropdown">
									<%= link_to("#", {class: "dropdown-toggle", "data-toggle" => "dropdown"}) do %>
										<b><%= current_user.profile.business_card.full_name %><b class="caret"></b>
									<% end %>
									<ul class="dropdown-menu">
									 	<li><%#= link_to "Change your password", edit_registration_path %></li>
							    </ul>
								</li>
								<li><%= link_to 'Sign out', destroy_user_session_path, method: :delete %></li>
							</ul>
						<% end %>
					</div>

		      <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
		        <span class="icon-bar"></span>
		        <span class="icon-bar"></span>
		        <span class="icon-bar"></span>
		      </a>
					<%= link_to "Live Transit API", root_path, :class => "brand" %>
		    </div>
		  </div>
		</div>
	

		<!-- Content ================================================== -->	
		<div class="span12">			
			<% if content_for?(:title) %>
				<div class="page-header">
					<h1><%= yield(:title) %></h1>
				</div>
			<% end %>

			<% flash.each do |name, msg| %>
			  <div class="alert alert-<%= name == :notice ? 'success' : 'error' %>">
			    <a class="close" data-dismiss="alert">Ã—</a>
		    		<%= msg %>
			  </div>
			<% end %>

			<%= yield %>
			<hr />
		</div>

   <!-- Footer ================================================== -->
		<footer class="footer">
			<div class="row-fluid">
				<div class="span4">
					<p>More information may be found here: <%= link_to "Live Transit API Documentation", "http://kb.g-and-o.com/wiki/index.php/Live_Transit_API" %></p>
					
					<p>&copy; Stantec, Inc. 2013</p>
				</div>
				<div class="span8">
					<p class="pull-right"><a href="#">Back to top</a></p>
				</div>
			</div>
		</footer>
	</div> <!-- /container -->
</body>
</html>
